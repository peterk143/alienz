#!/bin/bash

## RFE
##  add flag to not tag or build

if [ -d ./debian ]; then

    ## build package
    if [ -f ../*.deb ]; then
	git rm ../*.deb
    fi
    dpkg-buildpackage -A -uc -us -rfakeroot
    rm -rf debian/alienz* debian/files ../*.changes

    ## deploy; should use deploy for localhost first
    if [ -f /usr/bin/deploy ]; then
    	deploy
    else
    	usr/bin/deploy
    fi

    rm -rf ${TMP}
else
    echo "wrong directory, br0"
fi
